{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@types",
      "../../node_modules/@types",
    ],
    "lib": ["es2015", "es2017", "esnext.asynciterable", "dom", "dom.iterable", "esnext"]
  },
  "exclude": ["node_modules", "dist"],
}